                android:background="@drawable/cell_rectangle">

            </TextView>
            </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:width="97dp"
                android:height="93dp"
                android:background="@drawable/cell_rectangle">

            </TextView>

            <TextView
                android:width="97dp"
