<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="522.0" prefWidth="585.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guessinggame.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <AnchorPane prefHeight="400.0" prefWidth="700.0">
      <children>
         <TextField fx:id="txtGuess" layoutX="320.0" layoutY="125.0" prefHeight="25.0" prefWidth="53.0" />
         <Label layoutX="195.0" layoutY="27.0" text="Danil Hi-Lo Guessing Game" />
         <Label layoutX="112.0" layoutY="129.0" text="Guess a number between 1 and 100:" />
         <Button fx:id="knpka" layoutX="242.0" layoutY="238.0" mnemonicParsing="false" onAction="#CheckGuess" text="Guess!" />
         <Label fx:id="lblOutput" layoutX="158.0" layoutY="302.0" prefHeight="17.0" prefWidth="298.0" text="Ввдите число выше и нажмите &quot;Guess&quot;" />
         <Button fx:id="playAgainButton" layoutX="341.0" layoutY="238.0" mnemonicParsing="false" onAction="#newGame" text="Play Again" />
      </children>
   </AnchorPane>
   <Accordion />
</VBox>
